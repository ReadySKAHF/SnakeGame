<Page x:Class="SnakeGameWpf.pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SnakeGameWpf.pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="SettingsPage"
      KeyDown="Page_KeyDown">

    <Grid Background="#F3F3F3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Настройки" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0 20"/>

        <Grid Grid.Row="1" Margin="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Начальный размер змеек" FontSize="18" Margin="0 0 20 0" VerticalAlignment="Center"/>
            <TextBox x:Name="lengthBox" Width="100" Height="26" FontSize="16" VerticalAlignment="Center" Grid.Column="1"/>
        </Grid>
    </Grid>
</Page>